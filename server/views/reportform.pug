doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet", href="/static/css/style.css")
        title Report Form
    body 
         nav.navbar.bg-white.border-bottom.border-body(data-bs-theme="white")
            .container-fluid
                a.navbar-brand(href="")
                    img(src="./static/images/Cat.png" alt="Logo" width="40" height="45" class="d-inline-block align-text-top")
      
    .container.d-flex.justify-content-center.align-items-center

        form(action="/reportform", method="post")
            .mb-3
            label(for="inputColor", class="form-label") Color
            input#inputColor.form-control(type="text" name="color")
            br
            .mb-3
            label(for="inputRace", class="form-label") Race
            input#inputRace.form-control(type="text" name="race" )
            br
            .mb-3
            label(for="inputAge", class="form-label") Age (approximate)
            input#inputAge.form-control(type="number" name="age" min="1")
            br
            .mb-3
            label(for="inputAdress", class="form-label") Street (Local where the cat is)
            input#inputAdress.form-control(type="text" name="adress")
            br
            button.btn.btn-primary(type="submit") Submit