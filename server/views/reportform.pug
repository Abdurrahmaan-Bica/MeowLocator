doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet", href="/static/css/style.css")
        title Report Form
    body 
        nav.navbar.bg-body-tertiary
        .container-fluid
          a.navbar-brand(href="")
            img(src="./static/images/Cat" alt=" Cat Logo" width="200" height="200" class="d-inline-block align-text-top")
          ul.nav.justify-content-end
            li.nav-item
                a.nav-link(href="/") Home
            li.nav-item
                a.nav-link(href="") 
        .container.d-flex.justify-content-center.align-items-center.mt-5
            h2 Report Form  

      
        .container.d-flex.justify-content-center.align-items-center(style="margin-top: 3rem;")
            form(action="/report-cat", method="post")

                .mb-3.row
                    label.col-sm-3.col-form-label(for="inputColor") Color of the Cat
                    .col-sm-8
                        input#InputColor.form-control(type="text" name="color")
                    br
                    br
                .mb-3.row
                    label.col-sm-3.col-form-label(for="inputBreed") Breed
                    .col-sm-8
                        input#InputBreed.form-control(type="text" name="breed")
                    br
                    br
                .mb-3.row
                    label.col-sm-3.col-form-label(for="inputStreet") Street
                    .col-sm-8
                        input#inputStreet.form-control(type="text" name="street")
                    br
                    br
                .mb-3.row
                    label.col-sm-3.col-form-label(for="inputDescription") Description
                    .col-sm-8
                        input#inputDescription.form-control(type="text" name="description")
                    br
                    br
                
            

                .container(style="margin-top: -1rem;margin-left: 9rem;")
                  a(href="#")
                    button.btn.btn-secondary.btn-sm.mt-5(type="button") Submit 
                    
