doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet", href="/static/css/style.css")
        title Report Form
    body 
        nav.navbar.bg-black.border-body(data-bs-theme="black")
            .container-fluid
                a.navbar-brand(href="")
                    img(src="./static/images/Cat.png" alt=" Cat Logo" width="70" height="75" class="d-inline-block align-text-top")
                ul.nav.justify-content-end
                    li.nav-item
                        a.nav-link(href="/") Homepage
                    li.nav-item
                        a.nav-link(href="about-us") About us
      
    .container.d-flex.justify-content-center.align-items-center.mt-5

      form(action="/report-cat", method="post")
        .mb-3
            label(for="inputColor", class="form-label") Color
            input#inputColor.form-control(type="text" name="color")
        .mb-3
            label(for="inputRace", class="form-label") Race
            input#inputRace.form-control(type="text" name="race")
        .mb-3
            label(for="inputAge", class="form-label") Age (approximate)
            input#inputAge.form-control(type="number" name="age" min="1")
        .mb-3
            label(for="inputAddress", class="form-label") Street (Local where the cat is)
            input#inputAddress.form-control(type="text" name="address")
        .mb-3
            label(for="inputDescription", class="form-label") Description
            textarea#inputDescription.form-control(name="description" rows="5")
        button.btn.btn-secondary(type="submit") Submit

